{
  "name": "skeleton-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean:test": "pkill -f 'node.*vitest' || true",
    "clean:e2e": "pkill -f 'playwright test' || true",
    "pretest": "npm run clean:test",
    "test": "vitest",
    "test:run": "vitest run",
    "posttest": "npm run clean:test",
    "posttest:run": "npm run clean:test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "npm run clean:test",
    "pretest:e2e": "npm run clean:e2e",
    "test:e2e": "playwright test",
    "posttest:e2e": "npm run clean:e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "push": "gh-pages -d build",
    "deploy": "npm run build && npm run push"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@iconify/svelte": "^4.2.0",
    "@playwright/test": "^1.56.1",
    "@skeletonlabs/skeleton": "^3.1.3",
    "@skeletonlabs/skeleton-svelte": "^1.2.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.15.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.5",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "cookie": "^1.0.2"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
